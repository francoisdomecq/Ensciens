@model Ensciens.Models.Publication

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Publication</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Contenu)
        </dt>
        <dd class = "col-sm-10">
             @Html.DisplayFor(model => model.Contenu)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DatePublication)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DatePublication)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Medias)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Medias)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Evenement)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Evenement.Description)
        </dd>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Commentaires</th>
                    <th>Publicateur</th>
                </tr>
                @foreach (var item in Model.Commentaires)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contenu)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Publicateur.Nom) @Html.DisplayFor(modelItem=>item.Publicateur.Prenom)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
